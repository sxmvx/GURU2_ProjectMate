<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_team_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPersonalHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:text="개인 홈"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/grey"
        android:textColor="@android:color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExistingTeam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="기존 팀과 함께 하기"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/blue"
        android:textColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoinWithCode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="팀 코드로 참여하기"
        android:layout_marginTop="20dp"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/grey"
        android:textColor="@android:color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateTeam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="새로운 팀 생성"
        android:layout_marginTop="20dp"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/blue"
        android:textColor="@android:color/white" />

</LinearLayout>