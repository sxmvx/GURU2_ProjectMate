<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="32dp">

    <!-- 상단 프로필 + 닫기 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_profile"
                android:background="@drawable/circle_profile" />

            <TextView
                android:id="@+id/textProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="프로필\n이미지"
                android:textColor="#888888"
                android:textSize="12sp"
                android:textStyle="normal"
                android:lineSpacingExtra="2dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/textViewGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00님, 안녕하세요!"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#222222" />
    </LinearLayout>

    <!-- 참여중인 팀 -->
    <TextView
        android:id="@+id/textViewTeamsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여중인 팀"
        android:textSize="22sp"
        android:textColor="#111111"
        android:textStyle="normal"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:overScrollMode="never"
        android:clipToPadding="false"/>

    <!-- 내 일정 (팀 리스트 끝에 딱 붙음, 하단 아님!) -->
    <TextView
        android:id="@+id/textViewMyScheduleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 일정"
        android:textSize="22sp"
        android:textColor="#111111"
        android:textStyle="normal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start"
        android:layout_gravity="start"/>
</LinearLayout>
